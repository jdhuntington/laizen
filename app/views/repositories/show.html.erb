<p>
  <b>Path:</b>
  <%=h @repository.path %>
</p>

<p>
  <b>Name:</b>
  <%=h @repository.name %>
</p>


<%= link_to 'Edit', edit_repository_path(@repository) %> |
<%= link_to 'Back', repositories_path %>

<hr />

<ul>
  <% @repository.commits.each do |commit| %>
  <li>
    <strong><%= link_to commit.id, repository_commit_url(@repository, commit.id) %></strong>
    <br />
    <%= h commit.message %>
    <br />
    <em><%= time_ago_in_words commit.committed_date %> ago</em>
  </li>
  <% end %>
</ul>
